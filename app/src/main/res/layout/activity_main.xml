<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <WebView
        android:id="@+id/webview"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </WebView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opções adicionais"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:padding="4dp"
            android:layout_weight="1"
            android:id="@+id/buttonTokenIvalid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:textColor="@color/white"
            android:text="Enviar Token Inválido"/>
        <Button
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="4dp"
            android:layout_weight="1"
            android:id="@+id/buttonTokenUsed"
            android:layout_width="0dp"
            android:background="@color/red"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:text="Enviar Token já usado"/>
        <Button
            android:padding="4dp"
            android:layout_weight="1"
            android:id="@+id/buttonSecretInvalid"
            android:layout_width="0dp"
            android:background="@color/red"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Enviar com Secret Inválida"/>
    </LinearLayout>


</LinearLayout>